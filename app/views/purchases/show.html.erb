<div class="container">
    <div class="banner-bg">
        <div class="banner">
            <h2 class = "dash-p">Congratulations!</h2>
            <p>Your reservation has been done successfulyy!</p>
        </div>
    </div>
    <div class="displaying-card-info">
        <div class ="displaying-card">
            <div class="card">
                <div class="cardfirst">
                <%= image_tag('card_example.svg', class: "avatar")%>
                <span class="card_first_title"> Price </span>
                <span class="card_first_desc"> <%= @flight_ticket.price %> â‚¬</span>
                <span class="card_first_title"> Dates </span>
                <span class="card_first_desc"> <%= @flight_ticket.departure_at.strftime("%d/%m") %> - <%= @flight_ticket.arrival_at.strftime("%d/%m") %></span>
                </div>
                <div class="cardsecond">
                <div class="card_go">
                    <span class="card_second_hours"><%= @flight_ticket.departure_at.strftime("%I:%M%p") %> </span><%= image_tag('departure.svg', :class => "deparr")%> <span class="card_second_hours"><%= @flight_ticket.arrival_at.strftime(" %I:%M%p") %> </span><br>
                    <span class="air_departure"><%= @flight_ticket.departure.city %> </span><%= image_tag('dots.svg', :class => "deparr")%> <span class="air_departure"><%= @flight_ticket.arrival.city %></span>
                </div>
                <div class="card_back">
                    <span class="card_second_hours">17:30 AM </span><%= image_tag('arrival.svg', :class => "deparr")%> <span class="card_second_hours">18:50 PM </span><br>
                    <span class="air_departure"><%= @flight_ticket.arrival.city %> </span><%= image_tag('dots.svg', :class => "deparr")%> <span class="air_departure"><%= @flight_ticket.departure.city %></span>
                </div>
                </div>
                <div class="cardthird">
                <%= image_tag('card_example.svg', class: "card_image")%>
                </div>
            </div>
        </div>
        <div class="displaying-info">
            <div class="info-purch-items">
                <i class="fas fa-check-circle"></i>
                <h3>Your reservation Has been verified by our legal team. </h3>
            </div>
            <div class="info-purch-items">
                <i class="fas fa-ticket-alt"></i>
                <div class="info-purchase">
                    <h3>Want to know more information about your purchase</h3>
                    <p> All your purchases and offers, <%= link_to "click here", my_dashboard_path %> </p>
                </div>
            </div>
        </div>
    </div>
</div>