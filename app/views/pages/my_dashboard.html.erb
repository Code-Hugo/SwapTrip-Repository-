<div class="container">
    <div class="banner-bg">
        <div class="banner">
            <h2 class = "dash-p"> Welcome Back, <%= @user.email %></h2>
            <div class="main-box">
                <div>
                    <p>personal information</p>
                    <div class ="personal-info-item">
                        <i class="fas fa-at"></i>
                        <p class="label">Email</p>
                        <p class="detail"><%= @user.email %></p>
                    </div>
                    <div class ="personal-info-item">
                        <i class="fas fa-passport"></i>
                        <p class="label">Travel Doc</p>
                        <p class="detail">X78240LPK</p>
                    </div>
                    <div class ="personal-info-item">
                        <i class="fas fa-user"></i>
                        <p class="label">Username</p>
                        <p class="detail"><%= @user.username %></p>
                    </div>
                    <div class ="personal-info-item">
                        <i class="fas fa-user-check"></i>
                        <p class="label">Full name</p>
                        <p class="detail"><%= @user.Fullname %> </p>
                    </div>
                </div>
                <div>
                    <p>Contact Us</p>
                    <div class ="personal-info-item">
                        <i class="fas fa-concierge-bell"></i>
                        <p class="label">Support</p>
                        <p class="detail">support@gmail.com</p>
                    </div>
                    <div class ="personal-info-item">
                        <i class="fas fa-comment"></i>
                        <p class="label">Feedback</p>
                        <p class="detail">feedback@gmail.com</p>
                    </div>
                    <div class ="personal-info-item">
                        <i class="fas fa-phone"></i>
                        <p class="label">Phone</p>
                        <p class="detail">+9798755625</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class = "offers-purchases-layout">
        <div class = "offers-layout">
            <h2>My Offers</h2>

            <% @my_offers.each do |offer| %>
                <div class="offer-card">
                    <div class="destination-price">
                        <p> <%= offer.departure.city %> to <%= offer.arrival.city %></p>

                        <p class="price">Price € <%= offer.price %></p>
                    </div>
                    <div class="offer-card-info">
                        <div>
                            <p class="date"><%= offer.departure_at.strftime("%d/%m") %></p>
                            <p class="airport"><%= offer.departure.code %></p>
                            <p class="time"><%= offer.departure_at.strftime("%I:%M%p") %></p>
                        </div>
                    <hr>
                    <i class="far fa-plane"></i>
                    <hr>
                        <div>
                            <p class="date"><%= offer.arrival_at.strftime("%d/%m") %></p>
                            <p class="airport"><%= offer.arrival.code %></p>
                            <p class="time"><%= offer.arrival_at.strftime("%I:%M%p") %></p>
                        </div>
                    </div>
                </div>
                <hr>
            <% end %>

        </div>

        <div class = "purchases-layout">
            <h2>My Purchases</h2>

            <% @my_purchases.each do |purchase| %>
                <div class="offer-card">
                    <div class="destination-price">
                        <p> <%= purchase.flight_ticket.departure.city %> to <%= purchase.flight_ticket.arrival.city %></p>
                        <p class="price">Price € <%= purchase.flight_ticket.price %></p>
                    </div>
                    <div class="offer-card-info">
                        <div>
                            <p class="date"><%= purchase.flight_ticket.departure_at.strftime("%d/%m") %></p>
                            <p class="airport"><%= purchase.flight_ticket.departure.code %></p>
                            <p class="time"><%= purchase.flight_ticket.departure_at.strftime("%I:%M%p") %></p>
                        </div>
                    <hr>
                    <p><i class="fas fa-plane-alt"></i></p>
                    <hr>
                        <div>
                            <p class="date"><%= purchase.flight_ticket.arrival_at.strftime("%d/%m") %></p>
                            <p class="airport"><%= purchase.flight_ticket.arrival.code %></p>
                            <p class="time"><%= purchase.flight_ticket.arrival_at.strftime("%I:%M%p") %></p>
                        </div>
                    </div>
                </div>
                <hr>
            <% end %>
        </div>
    </div>
</div>
