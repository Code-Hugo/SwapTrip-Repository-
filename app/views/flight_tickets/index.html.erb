<div class="banner">
  <div class="wrapper bg-white">
    <form class ="searchForm" action="#">
        <div class="form-group d-sm-flex margin">
            <div class="search_label d-flex align-items-center flex-fill me-sm-1 my-sm-0 my-4 position-relative"> <%= image_tag('departure.svg', :class => "deparr")%> <input type="text" required placeholder="From" class="label_inside form-control">
                 <div class="label" id="from"></div>
            </div>
            <%= image_tag('swap_arrows.png', :class => "swap_image")%>
            <div class="search_label d-flex align-items-center flex-fill ms-sm-1 my-sm-0 my-4 position-relative">  <%= image_tag('arrival.svg', :class => "deparr")%><input type="text" required placeholder="To" class="label_inside form-control">
                 </span><div class="label" id="to"></i></div>
            </div>
        </div>
        <div class="form-group d-sm-flex margin">
            <div class="search_label d-flex align-items-center flex-fill me-sm1 my-sm-0 position-relative"> <input type="date" required placeholder="Depart Date" class="label_inside form-control">
                <div class="label" id="depart"></div>
            </div>
            <div class="search_label search_margin d-flex align-items-center flex-fill ms-sm-1 my-sm-0 my-4 position-relative"> <input type="date" required placeholder="Return Date" class="label_inside form-control">
                <div class="label" id="return"></div>
            </div>
        </div>
        <div class="search_row form-group my-3">
            <div class="searchbtn btn btn-primary rounded-0 d-flex justify-content-center text-center p-3">Search</div>
        </div>
    </form>
</div>
</div>
<div class="container-list">
  <div class="cards">
    <% @flight_tickets.take(2).each do |flight| %>
      <%= link_to flight_tickets_path(flight) do %>
      <div class="card">
          <div class="cardfirst">
            <%= image_tag('card_example.svg', class: "avatar")%>
            <span class="card_first_title"> Price </span>
            <span class="card_first_desc"> 100$ </span>
            <span class="card_first_title"> Dates </span>
            <span class="card_first_desc"> 24/04 - 28/04 </span>
          </div>
          <div class="cardsecond">
            <div class="card_go">
              <span class="card_second_hours">11:30 AM </span><%= image_tag('departure.svg', :class => "deparr")%> <span class="card_second_hours">12:50 PM </span><br>
              <span class="air_departure">SFO </span><%= image_tag('dots.svg', :class => "deparr")%> <span class="air_departure">NYC</span>
            </div>
            <div class="card_back">
              <span class="card_second_hours">17:30 AM </span><%= image_tag('arrival.svg', :class => "deparr")%> <span class="card_second_hours">18:50 PM </span><br>
              <span class="air_departure">NYC </span><%= image_tag('dots.svg', :class => "deparr")%> <span class="air_departure">SFO</span>
            </div>

          </div>
          <div class="cardthird">
            <%= image_tag('card_example.svg', class: "card_image")%>
          </div>
      </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-container">
    <div class="form-home">
      <div class="form-header">
        <h3 class="form-h3">Check if your flight ticket swappable!</h3>
        <%= image_tag('ticket.svg', class: "ticket-img-form")%>
        <%= image_tag('airlines.svg', class: "airlines-img-form")%>
      </div>
      <div class="form-fields">
      <p class="form-title">Flight ticket details</p>
        <input type="text" required placeholder="Passanger Full Name" class="label_inside form-control">
        <input type="text" required placeholder="Booking Code" class="label_inside form-control">
        <input type="text" required placeholder="Reservation Email" class="label_inside form-control">
        <input type="text" required placeholder="Flight Number" class="label_inside form-control">
      </div>
      <div class="submit_row form-group my-3">
        <div class="formButton">Validate</div>
      </div>
      </div>
  </div>
</div>
